<div class="row">
  <div class="panel">
    <h3 align="center">Edit profile for <%= current_user.first_name %> <%= current_user.last_name %></h3><br>
    <div class="panel">
      <h6>Edit your details</h6>
      <br>
      <%= form_for(current_user, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <%= f.label :user_name %><br>
          <%= f.text_field :user_name %>
        </div>

        <div class="field">
          <%= f.label :email %><br>
          <%= f.email_field :email %>
        </div>
        <br>
        <% if(current_user.profile_photo?) %>
          <img src="<%= current_user.profile_photo %>" alt="">
          <div class="field">
            <%= f.label :profile_photo %><br>
            <%= f.file_field :profile_photo %>
          </div>
        <% end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <div class="panel">
        <div class="field">
          <%= f.label :current_password %> <i>Please enter your current password to confirm your changes.</i><br>
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      </div>
      <br>

      <div class="panel">
        <h6>Change Your Password</h6><br>
        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>


      </div>
    <% end %>

    <br>
    <h6>Cancel My Account</h6>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    <br>
    <div align="center">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
