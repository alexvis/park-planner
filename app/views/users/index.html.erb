<h1>Admin Page</h1>

<h1>Users List</h1>
<ul>
  <% @users.each do |user| %>
    <li> <%= user.user_name %> </li>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>

<h1>Parks List</h1>
<ul>
  <% @parks.each do |park| %>
    <li> <%= park.name %> </li>
    <%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>

<h1>Reviews List</h1>
<ul>
  <% @reviews.each do |review| %>
    <li> <%= review.comment %> </li>
    <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>
